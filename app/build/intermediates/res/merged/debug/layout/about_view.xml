<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ImageView
        android:id="@+id/about_simpity_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/simpity_logo_org"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_simpity_logo"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="28dip"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="version"
                android:id="@+id/version"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dip"
                android:text="@string/copyright2"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/about_simpity_inc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/copyright1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="4dip"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/about_psa_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.simpity.by"
                android:clickable="true"
                android:autoLink="web"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />





        </LinearLayout>

    </ScrollView>

</RelativeLayout>