<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AboutLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            >

            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/description1"
            android:gravity="center_horizontal"
                android:textSize="20dip"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:padding="2dp"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="246dp"
                android:text="@string/description2"
                android:textStyle="bold"
                android:textSize="14dip"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingTop="12dp"
                android:paddingRight="4dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dip"
                android:text="@string/copyright2"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/about_simpity_inc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/copyright1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="4dip"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/about_psa_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.simpity.by"
                android:clickable="true"
                android:autoLink="web"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
            <ImageView
                android:id="@+id/about_simpity_logo"
                android:layout_width="330dp"
                android:layout_height="140dp"
                android:src="@drawable/simpity_logo_org"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>